{
    "manifest_version":2,
    "name": "InstaScrapper",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js", "eventPage.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "declarativeContent",
        "activeTab",
        "tabs",
        "downloads",
        "*://*/*"
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["insta_content.js"],
        "all_frames": true,
        "match_about_blank": true
    }]
    }
